<?xml version="1.0"?>
<robot name="cartpole" xmlns:xacro="http://www.ros.org/wiki/xacro">
	<static>true</static>

	<link name="link_chassis">
    <!-- pose and inertial -->
	    <!-- <pose>0 2 0.1 0 0 0</pose> -->
	    
	    <inertial>
	      <mass value="5"/>
	      <origin rpy="0 0 0" xyz="0 0 0"/>
	      <inertia ixx="0.013541666667" ixy="0" ixz="0" iyy="0.013541666667" iyz="0" izz="0.01875"/>
	      
	    </inertial>
	    
	    <collision name="collision_chassis">
	      <geometry>
	        <box size="0.15 0.15 0.10"/>
	      </geometry>
	    </collision>
	    
	    <visual>
	      <origin rpy="0 0 0" xyz="0 0 0"/>
	      <geometry>
	        <box size="0.15 0.15 0.10"/>
	      </geometry>
	      <material name="blue"/>
	    </visual>
	    
    </link>
    
  <joint name="joint" type="continuous">
      <axis xyz="0 1 0" rpy="0 0 0" />
      <parent link="link_chassis"/>
      <child link="pole"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>
  <link name="pole">
	    
	    <inertial>
	      <mass value="1"/>
	      <origin rpy="0 0 0" xyz="0 0 0.25"/>
	      <inertia ixx="0.02086667" ixy="0" ixz="0" iyy="0.02086667" iyz="0" izz="6.6667e-4"/>
	      
	    </inertial>
	    
	    <collision >
	    <origin rpy="0 0 0" xyz="0 0 0.25"/>
	      <geometry>
	        <box size="0.02 0.02 0.50"/>
	      </geometry>
	    </collision>
	    
	    <visual>
	      <origin rpy="0 0 0" xyz="0 0 0.25"/>
	      <geometry>
	        <box size="0.02 0.02 0.50"/>
	      </geometry>
	      <material name="blue"/>
	    </visual>
	    
    </link>
    <plugin name="joint_state_publisher" filename="libgazebo_ros_joint_state_publisher.so">
   <jointName>joint</jointName>
   <updateRate>50.0	</updateRate>
   <alwaysOn>true</alwaysOn>
</plugin>

</robot>